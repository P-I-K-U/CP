<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    tools:context=".Chat.ConversationActivity">


        <LinearLayout
            android:id="@+id/bar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/upperBlue">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                app:lottie_autoPlay="true"
                android:layout_marginStart="5dp"
                app:lottie_fileName="back_icon.json"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginTop="8dp"
                android:elevation="10dp"
                android:layout_marginStart="5dp"
                android:src="@drawable/a0"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="10sp"
                    android:textColor="@color/white"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="sans-serif-light"
                    android:text="Online"
                    android:textColor="@color/white"
                    android:textSize="10sp" />

            </LinearLayout>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="210dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="5dp"
                android:src="@drawable/more" />



        /></LinearLayout>


    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:elevation="15dp"
            app:cardCornerRadius="20dp">

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:textCursorDrawable="@drawable/form_cursor"
                android:layout_marginTop="13dp"
                android:background="@color/white"
                android:hint="message" />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="210dp"
                android:layout_marginTop="11dp"
                android:alpha="0.6"
                android:focusableInTouchMode="true"
                android:src="@drawable/emoji_icon" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:elevation="15dp"
            app:cardCornerRadius="25dp">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:alpha="0.7"
                app:lottie_autoPlay="true"
                android:layout_marginTop="7dp"
                android:layout_marginStart="8dp"
                android:scaleType="fitXY"
                app:lottie_fileName="send.json"
                />


        </androidx.cardview.widget.CardView>


    </LinearLayout>

</RelativeLayout>